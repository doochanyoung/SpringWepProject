<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="query">
	<resultMap type="com.java.login.LoginVO" id="formLogin">
		<result column="ID" property="id"/>
		<result column="PASSWOED" property="password"/>
	</resultMap>
	
	<select id="loginCheck" resultType="integer" parameterType="com.java.login.LoginVO">
		select count(*) from tb_account
		<where>
			id = #{id}
				AND
			password = #{password}
		</where>
	</select>
	
	
	<select id="totalAccount" resultType="integer">
		SELECT COUNT(*) FROM tb_account
	</select>
</mapper>